{
    "manifest_version": 3,
    "name": "Udemy Time Tracker",
    "version": "1.3.1",
    "description": "Calcula o tempo restante para finalizar a seção atual de um curso na Udemy.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://*.udemy.com/course/*/learn/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.udemy.com/course/*/learn/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}